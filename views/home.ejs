<h1 id="main-heading">Codeial Social App</h1>
<div id="grid-box">
    <section id="unknown"></section>
    <%if(locals.user){%>
    <section id="feed-posts">
        <!-- If user is signed in only then show  -->
        <form action="/posts/create" id="new-post-form" method="POST" id="post-form">
            <textarea name="content" cols="100%" rows="3" required id="post-content"
                placeholder="Have something in mind, <%=user.name%>??"></textarea>
            <input type="submit" id="post-button" value="Post">
        </form>

        <%}%>
        <div class="post-list-container">
            <br>
            <br>
            <%if(locals.user){%>
        <%}%>
            <h2 id="feed">Feed</h2>
            <ul>
            <%for(post of posts){%>
        <%-include('_posts')-%>
        <%}%>
            </ul>
        </div>
    </section>
    <section id="user-friends">
        <br>
        <h4>Friends</h4>
        <ul>
        <%for(user of all_users){%>
        <li>
            <p id="friends-list"><a href="/users/profile/<%=user.id%>"><%=user.name%></a></p>
        </li>

        <%}%>
        </ul>
    </section>
</div>